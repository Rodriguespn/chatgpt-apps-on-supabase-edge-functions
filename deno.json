{
  "tasks": {
    "dev": "cd supabase/functions/mcp-server && deno task dev",
    "deploy": "cd supabase/functions/mcp-server && deno task deploy"
  },
  "imports": {
    "@std/path": "jsr:@std/path@^1.0.8",
    "express": "npm:express@^4.18.2",
    "@types/express": "npm:@types/express@^4.17.21",
    "mcp-lite": "npm:mcp-lite@^0.8.2",
    "zod": "npm:zod@^4.1.12",
    "@mcp-ui/server": "npm:@mcp-ui/server@5.12.0-alpha.5",
    "react": "npm:react@^18.2.0",
    "react-dom": "npm:react-dom@^18.2.0",
    "esbuild": "npm:esbuild@^0.20.0"
  },
  "compilerOptions": {
    "lib": ["deno.window", "dom"],
    "strict": true,
    "allowJs": true
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve"
  }
}
