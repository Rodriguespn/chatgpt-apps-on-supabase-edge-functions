{
  "lock": false,
  "tasks": {
    "widget:dev": "cd widget && deno task dev",
    "widget:build": "cd widget && deno task build",
    "widget:preview": "cd widget && deno task preview",
    "dev": "deno task widget:build && supabase functions serve mcp-server --no-verify-jwt",
    "deploy": "deno task widget:build && supabase functions deploy mcp-server --no-verify-jwt"
  },
  "imports": {
    "@std/path": "jsr:@std/path@^1.0.8",
    "hono": "jsr:@hono/hono@^4.6.16",
    "hono/": "jsr:/@hono/hono@^4.6.16/",
    "mcp-lite": "npm:mcp-lite@^0.8.2",
    "zod": "npm:zod@^4.1.12",
    "@mcp-ui/server": "npm:@mcp-ui/server@5.12.0-alpha.5"
  },
  "compilerOptions": {
    "lib": ["deno.window", "dom"],
    "strict": true
  }
}
